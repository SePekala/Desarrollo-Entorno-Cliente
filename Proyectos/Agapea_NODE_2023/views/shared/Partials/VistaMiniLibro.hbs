    <div class="row g-0">
        <div class="col-md-4">
            <a href="http://localhost:3000/Tienda/MostrarDetallesLibro?isbn13={{isbn13}}">
                <img src="{{imagenLibroBASE64}}" class="img-fluid rounded-start">
            </a>
            <a class="btn btn-primary btn-sm" href="http://localhost:3000/Pedido/AddLibroPedido/{{isbn13}}"> 
                COMPRAR
            </a>
            
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><a  href="http://localhost:3000/Tienda/MostrarDetallesLibro?isbn13={{isbn13}}">{{titulo}}</a></h5>
